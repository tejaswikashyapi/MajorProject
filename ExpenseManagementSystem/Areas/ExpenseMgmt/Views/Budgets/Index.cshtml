@model IEnumerable<ExpenseManagementSystem.Models.Budget>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BudgetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetCreatedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetCreatedOn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BudgetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BudgetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BudgetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
